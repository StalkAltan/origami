{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@codebakery/origami",
  "version": "3.0.0",
  "description": "Angular + Polymer",
  "keywords": [
    "Angular",
    "Polymer",
    "webcomponents",
    "elements"
  ],
  "contributors": [
    "Liz Mitchell <asyncliz@gmail.com>",
    "Andrew Mitchell <abmitchell77@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hotforfeature/origami.git"
  },
  "homepage": "https://github.com/hotforfeature/origami#readme",
  "bugs": {
    "url": "https://github.com/hotforfeature/origami/issues"
  },
  "scripts": {
    "build": "ng-packagr -p package.json",
    "test": "echo \"Error: no test script\" && exit 1",
    "lint": "prettier --write \"*.{js,ts,json,md}\" \"{src,test}/**/*\"",
    "precommit": "lint-staged",
    "release": "standard-version"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts",
      "flatModuleFile": "origami"
    }
  },
  "peerDependencies": {
    "@angular/core": "^6.0.0-rc.0 || ^6.0.0",
    "@angular/forms": "^6.0.0-rc.0 || ^6.0.0",
    "@polymer/polymer": "^3.0.5",
    "tslib": "^1.7.0"
  },
  "devDependencies": {
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@polymer/polymer": "^3.0.5",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "ng-packagr": "^3.0.6",
    "prettier": "^1.14.0",
    "standard-version": "^4.4.0",
    "tsickle": "^0.32.1",
    "tslib": "^1.9.3",
    "typescript": "^2.9.2",
    "zone.js": "^0.8.26"
  }
}
