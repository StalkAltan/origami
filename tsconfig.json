{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@codebakery/origami": ["./public_api.ts"],
      "@codebakery/origami/forms": ["./forms/public_api.ts"],
      "@codebakery/origami/polyfills": ["./polyfills/public_api.ts"],
      "@codebakery/origami/styles": ["./styles/public_api.ts"],
      "@codebakery/origami/templates": ["./templates/public_api.ts"],
      "@codebakery/origami/util": ["./util/public_api.ts"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": ["dist"]
}
